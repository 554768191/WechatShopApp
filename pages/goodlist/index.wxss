/*----tab1 start-----*/
.my-tabs{
	display:flex;
	flex-direction:row;
	justify-content:space-between;
	background-color:#fff;
	padding-top:24rpx;
	padding-bottom:32rpx;
	margin:0 180rpx;
}

.my-tabs .tab-item{
    font-size:15px;
    color:#999999;
}

.my-tabs .tab-item .tab-line{
    width:100%;
    height:2px;
    background:#353535;
}
.my-tabs .active{
    color:#353535!important;
}

.my-tabs-content{
  display:flex;
	flex-direction:column;
	background-color:#fff;
}

.my-tabs-content .content-item{
  display:flex;
	flex-direction:row;
	margin-bottom:46rpx;
}

.my-tabs-content .content-item .img{
    display:flex;
	flex-direction:row;
    margin-left:20rpx;
}

.my-tabs-content .content-item image{
    width:180rpx;
    height:180rpx;
}

.my-tabs-content .content-item .info{
    display:flex;
	flex-direction:column;
	margin:20rpx;
	 width:100%;
}

.my-tabs-content .content-item .info .name,.price-info{
    text-align:left;
    font-size:15px;
    color:#000000;
    line-height:16px;
}

.my-tabs-content .content-item .info .price-info{
    display:flex;
	flex-direction:row;
	align-items:center;
	margin-top:16rpx;
}

.my-tabs-content .content-item .info .price-info .price{
    font-size:15px;
    color:#ff3b53;
    font-weight:bold;
}

.my-tabs-content .content-item .info .price-info .promotion{
    font-size:12px;
    font-weight:bold;
    border:solid 1px #ff3b53;
    margin-left:15rpx;
    padding:4rpx 6rpx;
}

.my-tabs-content .content-item .info .price-info .new-arrival{
    border-color:#ff3b53;
    color:#ff3b53;
}

.my-tabs-content .content-item .info .price-info .postage-included{
    border-color:#fb7802;
    color:#fb7802;
}

.my-tabs-content .content-item .info .price-info .discount{
    border-color:#ff3b53;
    background-color:#ff3b53;
    color:#ffffff;
}

.my-tabs-content .content-item .info .original-price-sales{
  display:flex;
	flex-direction:row;
	justify-content:space-between;
	margin-top:10rpx;
	font-size:12px;
	color:#999999;
}


/*----tab1 end-----*/